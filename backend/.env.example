# Example environment variables for SmartAccounting Backend
# Node environment (development, production, test)
NODE_ENV=development
# Server port
PORT=5000
# Server host
HOST=0.0.0.0
# API base URL prefix
API_BASE_URL=/api
# Database connection string
DATABASE_URL=postgres://postgres:postgres@localhost:5432/smartaccounting
# JWT secret for authentication
JWT_SECRET=your_jwt_secret_here
# Max JSON body size
JSON_LIMIT=10mb
# Logging level (info, debug, warn, error)
LOG_LEVEL=info
# Trust proxy headers (true in production behind proxy)
TRUST_PROXY=false
